{% extends 'base.html.twig' %}
{% block title %}Mon profil{% endblock %}

{% block body %}
  <section class="container" style="max-width: 720px; margin: 2rem auto;">
    <h1>Mon profil</h1>
    <p class="text-muted">
      Aperçu de tes informations et de testatistiques de jeu. Plus tu joues, plus ces indicateurs se remplissent.
    </p>

    <div class="card p-3 mb-4">
      <h2 class="h5 mb-3">Mes informations</h2>
      <p><strong>Nom :</strong> {{ user.nom }}</p>
      <p><strong>Email :</strong> {{ user.email }}</p>

      {% if user.createdAt is defined and user.createdAt %}
        <p><strong>Date d'inscription :</strong> {{ user.createdAt|date('d/m/Y') }}</p>
      {% endif %}

      <p><strong>Nombre de parties :</strong> {{ stats.games_played }}</p>
      <p><strong>Meilleur score :</strong> {{ stats.best_score }}</p>
    </div>

    <div class="row g-3 my-3">
      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <div class="h4 mb-0">{{ stats.games_played }}</div>
          <div class="text-muted">Parties jouées</div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <div class="h4 mb-0">{{ stats.best_bien_etre }}</div>
          <div class="text-muted">Mon bien-être</div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <div class="h4 mb-0">{{ stats.best_bonheur }}</div>
          <div class="text-muted">Mon bonheur</div>
        </div>
      </div>

      <div class="col-6 col-md-3">
        <div class="card p-3 text-center">
          <div class="h4 mb-0">{{ stats.best_budget }} €</div>
          <div class="text-muted">Meilleur budget</div>
        </div>
      </div>
    </div>

    <a href="{{ path('app_menu') }}" class="btn btn-link mt-3">Retour au menu</a>
  </section>
{% endblock %}
