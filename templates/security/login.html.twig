{% extends 'base.html.twig' %}
{% block title %}Connexion | MamanSolo{% endblock %}

{% block stylesheets %}
<style>
  .container-login {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  /* Bulles décoratives en arrière-plan */
  .deco-bubble {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(230, 69, 111, 0.1), rgba(255, 229, 224, 0.3));
    pointer-events: none;
    animation: float 6s ease-in-out infinite;
  }

  .deco-bubble:nth-child(1) {
    width: 120px;
    height: 120px;
    top: 5%;
    left: 8%;
    animation-delay: 0s;
  }

  .deco-bubble:nth-child(2) {
    width: 180px;
    height: 180px;
    top: 70%;
    right: 5%;
    animation-delay: 2s;
  }

  .deco-bubble:nth-child(3) {
    width: 90px;
    height: 90px;
    bottom: 10%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }

  /* Header avec animation */
  .login-header {
    text-align: center;
    margin-bottom: 2rem;
    animation: fadeInDown 0.8s ease-out;
    z-index: 1;
  }

  .login-header h1 {
    font-size: 3rem;
    color: var(--colorFuchia);
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(230, 69, 111, 0.2);
    font-weight: bold;
  }

  .login-header p {
    font-size: 1.2rem;
    color: #555;
  }

  /* Carte du formulaire */
  .login-card {
    max-width: 450px;
    width: 100%;
    background: white;
    border-radius: 1.5rem;
    box-shadow: 0 8px 20px rgba(230, 69, 111, 0.15);
    padding: 2.5rem;
    animation: fadeInUp 1s ease-out 0.3s backwards;
    border: 3px solid rgba(230, 69, 111, 0.1);
    z-index: 1;
  }

  /* Message d'erreur */
  .error-message {
    background: #ffe5e5;
    color: #d32f2f;
    padding: 1rem;
    border-radius: 0.8rem;
    margin-bottom: 1.5rem;
    border: 2px solid #d32f2f;
    font-size: 0.95rem;
  }

  /* Style des champs du formulaire */
  .form-group {
    margin-bottom: 1.5rem;
  }

  .login-card label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .login-card input[type="text"],
  .login-card input[type="email"],
  .login-card input[type="password"] {
    width: 100%;
    padding: 0.9rem 1.2rem;
    border: 2px solid #e0e0e0;
    border-radius: 0.8rem;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .login-card input:focus {
    outline: none;
    border-color: var(--colorFuchia);
    box-shadow: 0 0 0 3px rgba(230, 69, 111, 0.1);
  }

  /* Boutons */
  .btn-connection {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .btn-submit {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, var(--colorFuchia) 0%, #ff6b9d 100%);
    color: white;
    border: none;
    border-radius: 2rem;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-submit::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn-submit:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(230, 69, 111, 0.3);
  }

  .btn-secondary {
    width: 100%;
    padding: 1rem;
    background: white;
    color: var(--colorFuchia);
    border: 2px solid var(--colorFuchia);
    border-radius: 2rem;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-secondary:hover {
    background: var(--colorFuchia);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(230, 69, 111, 0.2);
  }

  /* Animations */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .login-header h1 {
      font-size: 2.2rem;
    }

    .login-card {
      padding: 2rem;
    }
  }
</style>
{% endblock %}

{% block body %}
<div class="container-login">
  {# Bulles décoratives #}
  <div class="deco-bubble"></div>
  <div class="deco-bubble"></div>
  <div class="deco-bubble"></div>

  {# Header #}
  <div class="login-header">
    <h1>Connexion</h1>
    <p>Bienvenue sur MamanSolo</p>
  </div>

  {# Carte du formulaire #}
  <div class="login-card">
    <form method="post" action="{{ path('app_login') }}">
      {% if error %}
        <div class="error-message">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <div class="form-group">
        <label for="username">E-mail</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div class="btn-connection">
        <button class="btn-submit" type="submit">Se connecter</button>
        <a href="{{ path('app_register') }}" class="btn-secondary">Créer un compte</a>
      </div>
    </form>
  </div>
</div>
{% endblock %}
